{
  "name": "Vision Science Labs Reminder",
  "description": "Set daily reminder to visit the VSL website.",
  "version": "1.0.1",
  "manifest_version": 2,
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "VSL Alarm",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/vsl_16.png",
      "32": "images/vsl_32.png"
    }
  },
  "icons": {
    "16": "images/vsl_16.png",
    "32": "images/vsl_32.png",
    "48": "images/vsl_48.png",
    "128": "images/vsl_128.png"
  }
}
